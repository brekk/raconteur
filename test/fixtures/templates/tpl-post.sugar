article.post
    .content
        .drawn(role="drawn-content")
            img(src="{attributes.image}")
        .written
            header
                h1.title(role="title")|{attributes.title}
                h2.subtitle(role="subtitle")|{attributes.subtitle}
                ul.tags|{#attributes.tags}
                    li.tag|{.}
                    {/attributes.tags}
            .data(role="written-content")|{content|s}
        footer
            .meta(data-timestamp="0")
                .time(role="timestamp")|{attributes.timestamp}
                .category(role="category")|{attributes.category}