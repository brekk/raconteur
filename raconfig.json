{
    "project": "raconteur",
    "author": {
        "name": "brekk",
        "fullname": "Brekk Bockrath"
    },
    "build": {
        "paths": {
            "posts": "posts",
            "assets": "assets",
            "source": {
                "coffee": [
                    "./src/coffee/*.coffee",
                    "./src/coffee/**/*.coffee",
                    "./src/coffee/**/**/*.coffee"
                ],
                "barecoffee": "./src/coffee/bare/*.coffee",
                "stylus": "./src/stylus/*.styl",
                "dust": "./src/templates/tpl-*.dust",
                "powder": "./src/templates/tpl-*.powder",
                "tests": "./src/coffee/test/*.coffee",
                "fixtures": "src/coffee/test/fixtures"
            },
            "content": {
                "markdown": "./content/*.md",
                "assets": "./content/assets/*"
            }
        }
    }
}